# Database Configuration
MONGO_URL=mongodb://localhost:27017
DB_NAME=erp_database

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# OpenAI Configuration (for AI Call Handler)
OPENAI_API_KEY=your-openai-api-key-here

# Speech Recognition Configuration
USE_WHISPER=true  # Set to false to use Google Speech Recognition instead

# Twilio Configuration (for Phone Integration)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890  # Your Twilio phone number

# Backend URL (for development)
BACKEND_URL=http://localhost:8000

# Production Settings
ENV=development  # Set to 'production' for production deployment